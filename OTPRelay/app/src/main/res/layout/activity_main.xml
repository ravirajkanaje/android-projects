<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="SMS Relay"
            android:textSize="25dp">
        </TextView>

        <EditText
            android:id="@+id/phNumTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone number to relay">
        </EditText>
        <EditText
            android:id="@+id/emlTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="SMS receiver email">
        </EditText>
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:text="Save"
    android:onClick="saveRelayUser">
</Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="List"
            android:onClick="list">
        </Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:layout_gravity="center_horizontal"
            android:onClick="deleteAll"></Button>

<TableLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/userTable"></TableLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>